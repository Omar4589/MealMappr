<div class="h-screen px-5 bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="bg-white w-full max-w-md p-8 rounded-md mx-2 shadow-lg">
    <h2 class="text-2xl font-semibold text-center mb-6">User Settings</h2>

    <form id="settings-form">
      <div class="mb-6">
        <label for="name" class="block text-sm font-semibold mb-2">Name</label>
        <input
          type="text"
          name="name"
          id="name"
          class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-indigo-600"
          value=""
          disabled
        />
        <div class="cursor-pointer flex justify-between mt-2">
          <button
            type="button"
            id="edit-name"
            class="bg-blue-600 text-white font-semibold px-2 py-1 rounded hover:bg-blue-700"
          >Update</button>
          <button
            type="button"
            id="save-name"
            class="bg-blue-600 text-white font-semibold px-2 py-1 rounded hover:bg-blue-700 hidden"
          >Save</button>
        </div>
      </div>

      <div class="mb-6">
        <label
          for="email"
          class="block text-sm font-semibold mb-2"
        >Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-indigo-600"
          value=""
          disabled
        />
        <div class="flex justify-between mt-2">
          <button
            type="button"
            id="edit-email"
            class="bg-blue-600 text-white font-semibold px-2 py-1 rounded hover:bg-blue-700"
          >Update</button>
          <button
            type="button"
            id="save-email"
            class="bg-blue-600 text-white font-semibold px-2 py-1 rounded hover:bg-blue-700 hidden"
          >Save</button>
        </div>
      </div>

      <div class="mb-6">
        <label
          for="password"
          class="block text-sm font-semibold mb-2"
        >Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-indigo-600"
          value=""
          disabled
        />
        <div class="flex justify-between mt-2">
          <button
            type="button"
            id="edit-password"
            class="bg-blue-600 text-white font-semibold px-2 py-1 rounded hover:bg-blue-700"
          >Update</button>
          <button
            type="button"
            id="save-password"
            class="bg-blue-600 text-white font-semibold px-2 py-1 rounded hover:bg-blue-700 hidden"
          >Save</button>
        </div>
      </div>

      <div class="mb-6">
        <label
          for="theme"
          class="block text-sm font-semibold mb-2"
        >Theme</label>
        <select
          name="theme"
          id="theme"
          class="cursor-pointer w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-indigo -600"
          disabled
        >
          <option value="light">Light</option>
          <option value="dark">Dark</option>
        </select>
        <div class="flex justify-between mt-2">
          <button
            type="button"
            id="edit-theme"
            class="bg-blue-600 text-white font-semibold px-2 py-1 rounded hover:bg-blue-700"
          >Update</button>
          <button
            type="button"
            id="save-theme"
            class="bg-blue-600 text-white font-semibold px-2 py-1 rounded hover:bg-blue-700 hidden"
          >Save</button>
        </div>
      </div>
    </form>
  </div>
</div>