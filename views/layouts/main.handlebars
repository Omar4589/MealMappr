<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meal Planner</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"
    ></script>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/6.1.6/index.global.min.js"
      integrity="sha512-hNfQGfd5KlxAn+rNdPxQD8cTM6BDTpP44Oy9fxJO0VfSfrjwd0QWLQZhbtCEMDwq99jdMfshh3p3K58lJrH27g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <!--kd - imported jquery -->
  </head>
  <body class="bg-gray-100">
    <header class="bg-blue-500">
      <nav
        class="container mx-auto flex justify-between items-center text-slate-50 p-4"
      >
        <a href="/" class="w-4/5 font-bold text-4xl">MealMappr</a>
        <button
          class="w-1/5 text-5xl flex justify-center pb-2"
          id="menu-toggle"
        >
          &#9776;
        </button>
        <div
          class="dropdown-menu hidden bg-indigo-600 text-white rounded py-2 absolute right-0 top-20 z-10 text-center"
          id="dropdown-menu"
        >
          {{#if isLoggedIn}}
            <a
              href="/profile"
              class="block px-4 py-2 hover:bg-slate-50 hover:text-indigo-600"
            >Profile</a>
            <a
              href="/settings"
              class="block px-4 py-2 hover:bg-slate-50 hover:text-indigo-600"
            >Settings</a>
            <button
              id="logout"
              class="block px-4 w-full py-2 hover:bg-slate-50 hover:text-indigo-600"
            >Logout</button>
            <a
              href="/reportanissue"
              class="block px-4 py-2 hover:bg-slate-50 hover:text-indigo-600"
            >Report an issue</a>
          {{else}}
            <a
              href="/users/signup"
              class="block px-4 py-2 hover:bg-slate-50 hover:text-indigo-600"
            >Sign Up</a>
            <a
              href="/users/login"
              class="block px-4 py-2 hover:bg-slate-50 hover:text-indigo-600"
            >Sign In</a>
          {{/if}}

        </div>
      </nav>
    </header>
    <main>
      {{{body}}}
    </main>
    <footer class="bg-blue-500 py-6">
      <div class="container mx-auto text-center text-white">
        <p>&copy; 2023 MealMappr. All rights reserved.</p>
      </div>
    </footer>
    <!-- Render script for logged in users only -->
    {{#if isLoggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
    <script>
      $(document).ready(function() { $('#menu-toggle').on('click', function() {
      $('#dropdown-menu').toggleClass('hidden'); }); });
    </script>
  </body>
</html>